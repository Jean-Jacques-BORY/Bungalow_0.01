<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bjj.meteo1.MainActivity"
    android:weightSum="1">



    <TextView

            android:id="@+id/dataView"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:text="Chargement des données météo"
        android:layout_weight="1.03"
        android:layout_toLeftOf="@+id/lampeButton"
        android:layout_toStartOf="@+id/lampeButton" />


    <ToggleButton
        android:id="@+id/lampeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:id="@+id/lampeSwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lampeButton"
        android:layout_alignStart="@+id/lampeButton"
        android:layout_below="@+id/lampeButton"
        android:layout_marginTop="12dp"
        android:text="Lampe" />

</RelativeLayout>

